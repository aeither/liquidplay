{
  "compilerOptions": {
    "types": [
      "bun-types"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": [
    "**/*.ts",
    "src/mastra"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".mastra"
  ]
}